<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalRecord">

    <TextView
        android:id="@+id/txtFullname"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Health Record"
        app:layout_constraintTop_toBottomOf="@+id/txtFullname"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtAllergies"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Allergies"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtMedCond"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Medical Condition"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtAllergies"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtMedication"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Medication"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtMedCond"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtPregnent"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Pregnent(if women)"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtMedication"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtMedAll"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Medicine Allergies"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtPregnent"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtMFCI"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Medication For Chronic Illness"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtMedAll"
        tools:layout_editor_absoluteX="8dp" />

    <Spinner
        android:id="@+id/spinnerSL"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:entries="@array/SL"
        app:layout_constraintTop_toBottomOf="@+id/txtMFCI"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnSaveNext2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Save and Next"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSL"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>